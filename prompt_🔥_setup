function prompt_ğŸ”¥_precmd {
	wave_or_explode='%(?:%{$fg_bold[green]%}ğŸ‘‹:%{$fg_bold[red]%}ğŸ’¥)'
	git_or_cwd_info='$(~/.zsh/functions/git-info-or-cwd/exec)'
}

function prompt_ğŸ”¥_setup {
	autoload -Uz add-zsh-hook # Loads required functions

	add-zsh-hook precmd prompt_ğŸ”¥_precmd # Adds hook for calling prompt_ğŸ”¥_precmd before each command
	setopt PROMPT_SUBST

	# auto ls on empty line
	zle -N accept-line auto_ls
	zle -N other-widget auto_ls

	# Define prompts
	PROMPT="${wave_or_explode}%{$reset_color%}  "
	RPROMPT="${git_or_cwd_info}%{$reset_color%}"
	echo 'prompt set'	
	PROMPT="sexy af > "
}

prompt_ğŸ”¥_setup "$@"
