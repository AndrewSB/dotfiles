#!/bin/bash

#
# copy 
#   usage: copy [ target-directory ]
#

set -e # exit if we encounter an error
DIR=${1:-~} # default to ~ if a directory isn't specified

cp -v profile $DIR/.profile
cp -v bashrc $DIR/.bash_profile
cp -v bash_logout $DIR/.bash_logout
cp -v git.alias $DIR/.git.alias
# cp -v wave.theme $DIR/.wave.theme
cp -rv bash/functions $HOME/.bash_functions/

# this one is hardcoded, unfortunately
if [ -d $DIR/fbsource/fbobjc ]; then
	cp -v buckconfig.local $DIR/fbsource/fbobjc/.buckconfig.local
else
	echo "ðŸ’¥: fbsource/fbobjc didnt exist in the specified directory. Couldn't copy the buckconfig"
fi

cp -v global_gitignore $DIR/.global_gitignore

cp -v gitconfig $DIR/.gitconfig

cp -v hgrc $DIR/.hgrc

cp -v screenrc $DIR/.screenrc

cp -v tmux.conf $DIR/.tmux.conf

cp -v inputrc $DIR/.inputrc

cp -v hushlogin $DIR/.hushlogin
