#!/bin/bash

cp -v profile ~/.profile
ln -sf ~/.profile ~/.zprofile
cp -v zlogin ~/.zlogin
cp -v zlogout ~/.zlogout
cp -v zshrc ~/.zshrc
cp -v zimrc ~/.zimrc
cp wave.zsh-theme ~/.zim/modules/prompt/themes/wave.zsh-theme
ln -sf ~/.zim/modules/prompt/themes/wave.zsh-theme ~/.zim/modules/prompt/functions/prompt_wave_setup
cp -vR zsh/functions ~/.zsh

cp -v global_gitignore ~/.global_gitignore

cp -v git.alias ~/.git.alias

cp -v gitconfig ~/.gitconfig

cp -v vimrc ~/.vimrc

cp -v screenrc ~/.screenrc

cp -v inputrc ~/.inputrc

cp -v hushlogin ~/.hushlogin

cp -v sshconfig ~/.ssh/config

cp -v tmux.conf ~/.tmux.conf
